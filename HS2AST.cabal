name:                HS2AST
version:             0.1.0.0
synopsis:            Dump syntax trees of Haskell code
-- description:         
homepage:            http://chriswarbo.net/essays/repos/hs2ast.html
license:             GPL
license-file:        LICENSE
author:              Chris Warburton
maintainer:          chriswarbo@gmail.com
-- copyright:           
category:            Language
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

Library
  build-depends:       base
                     , ghc
                     , ghc-paths
                     , QuickCheck
                     , uniplate
                     , transformers
                     , syb
                     , directory
                     , bytestring
                     , containers
                     , ArbitraryHaskell
                     , temporary
  exposed-modules:     Mod2AST
  other-modules:       HS2AST
                     , HS2AST.Parser
                     , HS2AST.Sexpr
                     , HS2AST.Types
  hs-source-dirs:      src
  default-language:    Haskell2010

executable HS2AST
  main-is:             Main.hs
  -- other-modules:       
  other-extensions:    TemplateHaskell
  build-depends:       base >=4.7
                     , ghc
                     , ghc-paths
                     , QuickCheck
                     , uniplate
                     , transformers
                     , syb
                     , directory
                     , bytestring
                     , containers
                     , ArbitraryHaskell
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      tests, src
  main-is:             Main.hs
  build-depends:       base >= 4.7
                     , ghc
                     , ghc-paths
                     , QuickCheck
                     , uniplate
                     , tasty >= 0.7
                     , tasty-quickcheck
                     , directory
                     , transformers
                     , containers
                     , temporary
                     , syb
                     , bytestring
                     , ArbitraryHaskell
                     , process